extends layout/base
block content 
    section.content-header 
        h1 500 Error Page
            //- small Control panel
        ol.breadcrumb
            li
                a(href='index').logo
                    i.fa.fa-dashboard
                    | Home
            li.active Dashboard

    section.content
        div.error-page
            h2.headline.text-red 500
            div.error-content
                h3
                    i.fa.fa-warning.text-red
                    |  Oops! Something went wrong.
                p We will work on fixing that right away. Meanwhile, you may 
                    a(href="#") return to dashboard
                    |  or try using the search form.
                form.search-form
                    div.input-group
                        input.form-control(type="text", placeholder="Search", name="search")
                        div.input-group-btn
                            button.btn.btn-danger.btn-flat(type="submit", name="submit")
                                i.fa.fa-search
          