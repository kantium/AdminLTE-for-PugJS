div.col-md-12
    div.box.box-success
        div.box-header
            h3.box-title Events
        div.box-body.no-padding
            table.table#eventstable
                tbody
                    tr
                        th(style="width: 10px") #
                        th Event
                        th Date
                        th Price
                        th(style="width: 180px") Remaining
                        th(style="width: 80px") Action
                    // 
                        each row in table
                            tr
                                td= row.id
                                td= row.name
                                td= row.date
                                td= row.price
                                td 
                                    div.progress.progress-xs
                                        div.progress-bar.progress-bar-danger(style="width: 8%")
                                td
                                    button.btn-xs.btn-default.btn-flat(type="button", data-toggle="modal", data-target="#shopModal")
                                        i.fa.fa-shopping-cart
        div.overlay#eventstableoverlay
