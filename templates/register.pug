doctype html
html
    head
        include layout/header.pug
        link(rel='stylesheet', href='/static/plugins/iCheck/square/blue.css')
    body.hold-transition.login-page
        div.login-box
            div.login-logo
                a(href="#")
                    b My
                    | Bank
            div.login-box-body
                p.login-box-msg Register a new membership
                form(action="", method="post")
                    div.form-group.has-feedback
                        input.form-control(type="text", placeholder="Full name")
                        span.glyphicon.glyphicon-user.form-control-feedback
                    div.form-group.has-feedback
                        input.form-control(type="email", placeholder="Email")
                        span.glyphicon.glyphicon-envelope.form-control-feedback
                    div.form-group.has-feedback
                        input.form-control(type="password", placeholder="Password")
                        span.glyphicon.glyphicon-lock.form-control-feedback
                    div.form-group.has-feedback
                        input.form-control(type="password", placeholder="Retype password")
                        span.glyphicon.glyphicon-log-in.form-control-feedback
                    div.row
                        div.col-xs-8
                            div.checkbox.icheck
                                label
                                    div.icheckbox_square-blue(aria-checked="false", aria-disabled="false", style="position: relative;")
                                        input(type="checkbox")
                                        ins.iCheck-helper
                                    |  I agree to the 
                                    a(href="#") terms

                        div.col-xs-4
                            button.btn.btn-primary.btn-block.btn-flat(type="submit") Sign In

                div.social-auth-links.text-center
                    p - OR -
                    a.btn.btn-block.btn-social.btn-facebook.btn-flat(href="#")
                        i.fa.fa-facebook 
                        | Sign in using Facebook
                    a.btn.btn-block.btn-social.btn-google.btn-flat(href="#")
                        i.fa.fa-google-plus  
                        | Sign in using Google+
                    br
                    a.text-center(href="login") I already have a membership

    
    include layout/js.pug
    script(type='text/javascript', src='/static/plugins/iCheck/icheck.min.js')
    script $(function () {
        | $('input').iCheck({
        | checkboxClass: 'icheckbox_square-blue',
        | radioClass: 'iradio_square-blue',
        | increaseArea: '20%' /* optional */
        | });
        | });

    
